<script>
	$(document).ready(function () {
var width = $(window).width();
if ((width <= 550)) {
$("#modalResponsive").click(function () {
$('.modalToggleResponsive').toggle();
});
} else {
$("#modal").click(function () {
$('.modalToggle').toggle();
});
}
$(".drawerResponsive i").on("click", function () {
$(".modalToggleResponsive").toggle();

});


});
</script>
